<div class="container">
  <div class="jumbotron">
    <h1>Welcome to Profession Quest</h1>
    <form action="/users" method="post">
      <div class="input-group input-group-lg">
        <span class="input-group-btn">
        <input name="email" type="email" class="form-control" placeholder="Please enter your email address" aria-describedby="sizing-addon1">
      </div>
      <div class="input-group input-group-lg">
        <span class="input-group-btn">
        <input name="password" type="password" class="form-control" placeholder="Please enter a password" aria-describedby="sizing-addon1">
      </div>
      <div class="input-group input-group-lg">
        <span class="input-group-btn">
        <input name="confirmation" type="password" class="form-control" placeholder="Confirm your password" aria-describedby="sizing-addon1">
      </div>
        <p><button type="submit" class="btn btn-default btn-lg" role="button">Submit</button></p>
      </div>
    </form>
  </div>
</div>
